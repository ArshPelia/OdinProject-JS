<%- include('layout') %>

<h1><%= title %></h1>

<form method="POST">
    <div class="form-group">
        <label for="title">Title:</label>
        <input id="title" class="form-control" type="text" placeholder="Name of message" name="title" required >

    </div>

    <div class="form-group">
        <label for="text">Text:</label>
        <textarea id="text" class="form-control" placeholder="Text" name="text" required></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors) { %>
    <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }); %>
    </ul>
<% } %>
